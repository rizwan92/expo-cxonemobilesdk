# SwiftFormat configuration

# Exclude third-party and build outputs
exclude:
  - ios/Frameworks
  - example/ios/Pods
  - build

# General
indent: 2
maxwidth: 120
linebreaks: lf

# Wrapping
wraparguments: before-first
wrapcollections: before-first

# Style tweaks
self: remove
stripunusedargs: closure-only
stripunusedimports: true
redundanttype: true

